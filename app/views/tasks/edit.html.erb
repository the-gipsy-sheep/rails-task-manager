<h1>Aqui editamos con un formulario las tareas</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed? %>
  <%= f.text_field :completed %>
  <%= f.submit %>
<% end %>
<%= link_to "Back to list", tasks_path %>
